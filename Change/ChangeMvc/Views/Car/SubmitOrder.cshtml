                                            <td>
                                                <a href="#">
                                                    <label>
                                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option8">
                                                        <img src="/images/中国银行.png" alt="" width="25">&nbsp;&nbsp;<span class="bank-name">中国银行</span>
                                                    </label>
                                                </a>
                                            </td>
                                        </tr>
                                    </table>

                                    <div class="control-cart">
                                        <input type="submit" class="button btn-cart-to-checkout" value="立即支付" />
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
