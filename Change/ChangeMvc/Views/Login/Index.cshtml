
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Change商城登录</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/font.css">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/layui/layui/layui.js"></script>
</head>
<body>
    <div class="container-login">
        <div class="wrap-login layui-anim layui-anim-up">
            <form class="login-form validate-form layui-form" method="POST">
                <span class="login-form-title">
                    <a href="#"><img src="/images/logo.png" alt=""></a>
                </span>

                <div class="wrap-input validate-input">
                    <input class="input" type="text" name="UserName" placeholder="账号" lay-verify="required" class="layui-input">
                    <span class="focus-input"></span>
                    <span class="symbol-input100">
                        <i class="iconfont">&#xe6b8;</i>
                    </span>
                </div>

                <div class="wrap-input validate-input">
                    <input class="input" type="password" name="Pwd" placeholder="密码" lay-verify="required" class="layui-input">
                    <!-- 放射性 -->
                    <span class="focus-input"></span>
                    <span class="symbol-input100">
                        <i class="iconfont">&#xe82b;</i>
                    </span>
                </div>

                <div class="container-login-form-btn">
                    <input class="login-form-btn" value="登录" type="submit" lay-submit lay-filter="login">
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        忘记
                    </span>
                    <a class="txt2" href="#">
                        账号 / 密码?
                    </a>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" href="~/Login/Create">
                        注册账号？（Create your Account）
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
